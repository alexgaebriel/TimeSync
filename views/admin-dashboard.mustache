<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - TimeSync</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      color: #0A1128;
      font-family: Arial, sans-serif;
    }
    .sidebar {
      height: 100vh;
      background-color: #0A1128;
      color: white;
    }
    .sidebar a {
      color: white;
      text-decoration: none;
    }
    .card {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>
  <!-- Main Wrapper -->
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 sidebar p-3">
        <h4>Admin Panel</h4>
        <ul class="nav flex-column mt-3">
          <li class="nav-item"><a href="#" class="nav-link">Profile</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Employees</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Departments</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Shifts</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Attendance</a></li>
        </ul>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 col-lg-10">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center p-3">
          <h2>Dashboard</h2>
          <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
              {{admin_name}}
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Profile</a></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="row my-4">
          <div class="col-md-4">
            <div class="card p-3 text-center">
              <h5>Total Employees</h5>
              <h2>{{total_employees}}</h2>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card p-3 text-center">
              <h5>Total Departments</h5>
              <h2>{{total_departments}}</h2>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card p-3 text-center">
              <h5>Clocked-In Employees</h5>
              <h2>{{clocked_in_employees}}</h2>
            </div>
          </div>
        </div>

        <!-- Recent Attendance Table -->
        <div class="card p-3">
          <h5>Recent Attendance</h5>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Time In</th>
                <th>Time Out</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              {{#recent_attendance}}
              <tr>
                <td>{{EmployeeName}}</td>
                <td>{{DepartmentName}}</td>
                <td>{{TimeIn}}</td>
                <td>{{TimeOut}}</td>
                <td>{{Status}}</td>
              </tr>
              {{/recent_attendance}}
              {{^recent_attendance}}
              <tr>
                <td colspan="5" class="text-center">No recent attendance records available.</td>
              </tr>
              {{/recent_attendance}}
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
