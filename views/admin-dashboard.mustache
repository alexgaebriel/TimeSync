<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - TimeSync</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Arial', sans-serif;
    }

    .sidebar {
      height: 100vh;
      background-color: #0A1128;
      color: white;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
    }

    .sidebar a:hover {
      background-color: #1C3D6E;
      border-radius: 4px;
      padding: 8px;
    }

    .navbar {
      background-color: #0A1128;
      color: white;
    }

    .navbar-brand {
      color: #FFD700;
      font-weight: bold;
      font-size: 1.5rem;
    }

    .dropdown-menu {
      background-color: #0A1128;
      border: none;
    }

    .dropdown-item {
      color: white;
    }

    .dropdown-item:hover {
      background-color: #1C3D6E;
    }

    .card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-12 col-md-3 col-lg-2 sidebar p-3 d-flex flex-column align-items-start">
        <!-- Logo -->
        <div class="mb-4 text-center w-100">
          <img src="/path/to/logo.png" alt="Company Logo" class="img-fluid" style="max-width: 100px;">
        </div>
        <!-- Links -->
        <ul class="nav flex-column w-100">
          <li class="nav-item">
            <a href="/profile" class="nav-link py-2">Profile</a>
          </li>
          <li class="nav-item">
            <a href="/employee" class="nav-link py-2">Employee</a>
          </li>
          <li class="nav-item">
            <a href="/admin" class="nav-link py-2">Admin</a>
          </li>
          <li class="nav-item">
            <a href="/department" class="nav-link py-2">Department</a>
          </li>
          <li class="nav-item">
            <a href="/shift" class="nav-link py-2">Shift</a>
          </li>
          <li class="nav-item">
            <a href="/attendance" class="nav-link py-2">Attendance</a>
          </li>
        </ul>
      </div>

      <!-- Main Content -->
      <main class="col-12 col-md-9 col-lg-10">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark px-3">
          <a class="navbar-brand" href="/dashboard">TimeSync</a>
          <div class="ms-auto dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
              {{username}}
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
              <li><a class="dropdown-item" href="/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
        </nav>

        <!-- Greeting -->
        <div class="p-3">
          <h3 class="text-center">Welcome, {{username}}!</h3>
        </div>

        <!-- Stats Cards -->
        <div class="row my-4">
          <div class="col-md-4">
            <div class="card p-3 text-center">
              <h5>Total Employees</h5>
              <h2>{{employeeCount}}</h2>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card p-3 text-center">
              <h5>Total Admins</h5>
              <h2>{{adminCount}}</h2>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card p-3 text-center">
              <h5>Total Departments</h5>
              <h2>{{departmentCount}}</h2>
            </div>
          </div>
        </div>

        <!-- Recent Attendance Table -->
        <div class="card p-3">
          <h5>Latest Attendance Records</h5>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Employee ID</th>
                  <th>Name</th>
                  <th>Department</th>
                  <th>Time In</th>
                  <th>Status</th>
                  <th>Time Out</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                {{#recentAttendance}}
                <tr>
                  <td>{{EmployeeID}}</td>
                  <td>{{EmployeeName}}</td>
                  <td>{{DepartmentName}}</td>
                  <td>{{InTime}}</td>
                  <td>{{InStatus}}</td>
                  <td>{{OutTime}}</td>
                  <td>{{OutStatus}}</td>
                </tr>
                {{/recentAttendance}}
                {{^recentAttendance}}
                <tr>
                  <td colspan="7" class="text-center">No recent attendance records available.</td>
                </tr>
                {{/recentAttendance}}
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
