<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - TimeSync</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Arial', sans-serif;
    }

    .sidebar {
      height: 100vh;
      background-color: #0A1128;
      color: white;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
    }

    .sidebar a:hover {
      background-color: #1C3D6E;
      border-radius: 4px;
      padding: 8px;
    }

    .navbar {
      background-color: #0A1128;
      color: white;
    }

    .navbar-brand {
      color: #FFD700;
      font-weight: bold;
      font-size: 1.5rem;
    }

    .dropdown-menu {
      background-color: #0A1128;
      border: none;
    }

    .dropdown-item {
      color: white;
    }

    .dropdown-item:hover {
      background-color: #1C3D6E;
    }

    .card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-control[disabled] {
      background-color: #e9ecef;
    }

    .edit-btn {
      background-color: #1C3D6E;
      color: white;
      border: none;
      border-radius: 4px;
      padding: 4px 8px;
      font-size: 0.9rem;
      cursor: pointer;
    }

    .edit-btn:hover {
      background-color: #FFD700;
      color: #0A1128;
    }

    .save-btn {
      background-color: #1C3D6E;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      padding: 10px 15px;
      width: 100%;
    }

    .save-btn:hover {
      background-color: #FFD700;
      color: #0A1128;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-12 col-md-3 col-lg-2 sidebar p-3 d-flex flex-column align-items-start">
        <div class="mb-4 text-center w-100">
          <img src="/path/to/logo.png" alt="Company Logo" class="img-fluid" style="max-width: 100px;">
        </div>
        <ul class="nav flex-column w-100">
          <li class="nav-item">
            <a href="/profile" class="nav-link py-2">Profile</a>
          </li>
          <li class="nav-item">
            <a href="/employee" class="nav-link py-2">Employee</a>
          </li>
          <li class="nav-item">
            <a href="/admin" class="nav-link py-2">Admin</a>
          </li>
          <li class="nav-item">
            <a href="/department" class="nav-link py-2">Department</a>
          </li>
          <li class="nav-item">
            <a href="/shift" class="nav-link py-2">Shift</a>
          </li>
          <li class="nav-item">
            <a href="/attendance" class="nav-link py-2">Attendance</a>
          </li>
        </ul>
      </div>

      <!-- Main Content -->
      <main class="col-12 col-md-9 col-lg-10">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark px-3">
          <a class="navbar-brand" href="/dashboard">TimeSync</a>
          <div class="ms-auto dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
              {{username}}
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
              <li><a class="dropdown-item" href="/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
        </nav>

        <!-- Profile Info -->
        <div class="card p-4 my-4">
          <h3 class="text-center mb-4">Profile</h3>
          <form id="profileForm">
            <!-- Employee ID -->
            <div class="d-flex align-items-center mb-3">
              <label class="form-label w-25">Employee ID</label>
              <input type="text" class="form-control w-50" value="{{profile.EmployeeID}}" disabled>
            </div>

            <!-- Name -->
            <div class="d-flex align-items-center mb-3">
              <label class="form-label w-25">Name</label>
              <input type="text" id="name" class="form-control w-50" value="{{profile.Name}}" disabled>
              <button type="button" class="edit-btn ms-2" onclick="enableField('name')">Edit</button>
            </div>

            <!-- Email -->
            <div class="d-flex align-items-center mb-3">
              <label class="form-label w-25">Email</label>
              <input type="email" id="email" class="form-control w-50" value="{{profile.Email}}" disabled>
              <button type="button" class="edit-btn ms-2" onclick="enableField('email')">Edit</button>
            </div>

            <!-- Username -->
            <div class="d-flex align-items-center mb-3">
              <label class="form-label w-25">Username</label>
              <input type="text" id="username" class="form-control w-50" value="{{profile.Username}}" disabled>
              <button type="button" class="edit-btn ms-2" onclick="enableField('username')">Edit</button>
            </div>

            <!-- Birthdate -->
            <div class="d-flex align-items-center mb-3">
              <label class="form-label w-25">Birthdate</label>
              <input type="text" class="form-control w-50" value="{{profile.Birthdate}}" disabled>
            </div>

            <!-- Department -->
            <div class="d-flex align-items-center mb-3">
              <label class="form-label w-25">Department</label>
              <input type="text" class="form-control w-50" value="{{profile.DepartmentName}}" disabled>
            </div>

            <!-- Hire Date -->
            <div class="d-flex align-items-center mb-3">
              <label class="form-label w-25">Hire Date</label>
              <input type="text" class="form-control w-50" value="{{profile.HireDate}}" disabled>
            </div>

            <!-- Save Changes Button -->
            <button type="submit" class="save-btn mt-4">Save Changes</button>
          </form>
        </div>
      </main>
    </div>
  </div>

  <!-- JavaScript to handle editing -->
  <script>
    function enableField(fieldId) {
      const field = document.getElementById(fieldId);
      field.disabled = false;
      field.focus();
    }

    document.getElementById('profileForm').addEventListener('submit', function (event) {
      event.preventDefault();
      alert('Changes saved successfully!');
      // Add logic to save changes to the server
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
