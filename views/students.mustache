<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            color: #333;
            font-size: 28px;
            text-align: center;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #fff;
        }

        table th, table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        table th {
            background-color: #FFBF00;
            color: #111111;
        }

        table tr:nth-child(even) {
            background-color: #f7f7f7;
        }

        table tr:hover {
            background-color: #f7dc6f; /* Yellow hover effect */
        }

        .btn-outline-secondary {
            display: inline-block;
            padding: 10px 20px;
            margin-right: 10px;
            color: #333;
            text-decoration: none;
            border: 1px solid #333;
            border-radius: 4px;
            font-size: 14px;
        }

        .btn-outline-secondary:hover {
            background-color: #f7dc6f;
            border-color: #f7dc6f;
        }

        hr {
            margin: 30px 0;
            border: 1px solid #ddd;
        }

        .list-unstyled {
            list-style: none;
            padding-left: 0;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Students</h1>

        <table>
            <thead>
                <tr>
                    <th>Student Code</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Sex</th>
                </tr>
            </thead>
            <tbody>
                {{#items}}
                <tr>
                    <td>{{student_code}}</td>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{email}}</td>
                    <td>{{date_of_birth}}</td>
                    <td>{{sex}}</td>
                </tr>
                {{/items}}
            </tbody>
        </table>

        <hr />
        <ul class="list-unstyled">
            <li><a href="/courses" class="btn-outline-secondary">List of courses</a></li>
            <li><a href="/students" class="btn-outline-secondary">List of students</a></li>
        </ul>
    </div>

</body>
</html>
